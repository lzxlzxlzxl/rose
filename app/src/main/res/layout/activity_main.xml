<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1E"
    tools:context="com.example.phototest.MainActivity">

    <FrameLayout
        android:id="@+id/work_space"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <com.example.phototest.ActionImageView
            android:enabled="false"
            android:src="@drawable/small"
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:padding="0dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_height="match_parent" />
        <com.example.phototest.widget.StickerView
            android:visibility="gone"
            android:id="@+id/stick"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.example.phototest.widget.CropImageView
            android:id="@+id/crop"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <com.example.phototest.widget.EditTextActionLayout
            android:id="@+id/edit"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            />
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/no_pic_part_layout"
        android:layout_below="@id/work_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photo_no_pic_part_layout_height">
        <RelativeLayout
            android:id="@+id/deal_tool_box"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/photo_deal_tool_box_height">
            <Button
                android:onClick="mark"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="标记"/>
            <Button
                android:onClick="masic"
                android:layout_marginLeft="80dp"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="马赛克"/>
            <Button
                android:onClick="text"
                android:layout_marginLeft="160dp"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="文字"/>
            <Button
                android:layout_marginLeft="240dp"
                android:onClick="crop"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="裁剪"/>

            <Button
                android:layout_marginTop="50dp"
                android:onClick="rotate"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="旋转"/>
            <Button
                android:layout_marginTop="50dp"
                android:onClick="back"
                android:layout_marginLeft="80dp"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="返回"/>
            <Button
                android:layout_marginTop="50dp"
                android:onClick="finish"
                android:layout_marginLeft="160dp"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="完成"/>
            <Button
                android:layout_marginTop="50dp"
                android:onClick="output"
                android:layout_marginLeft="240dp"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="导出"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_above="@id/deal_tool_box"
            android:padding="10dp"
            android:id="@+id/pick_box_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pick_box_layout_height">
            <com.example.phototest.widget.ColorPickBox
                android:id="@+id/color_pick_box"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="52dp" />
            <com.example.phototest.widget.MasicSizePickBox
                android:visibility="gone"
                android:id="@+id/masic_size_pick_box"
                android:layout_width="match_parent"
                android:layout_height="52dp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
